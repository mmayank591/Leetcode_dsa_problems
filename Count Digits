import java.util.Scanner;
class Count_digits {
    public static void main(String args[])
    {
        int n;
        int count = 0 ;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the number = "); 
        n=sc.nextInt();
        while(n>0)
        {
            n=n/10;
            count++;
        }
        System.out.println("The no. of digits in this number are = " +count);

    
    }
    
}
